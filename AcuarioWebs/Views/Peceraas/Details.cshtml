@model AcuarioWebs.Models.Peceraa

@{
    ViewData["Title"] = "Detalles";
}

<h1 class="alert alert-secondary mt-5 text-center">Detalles de la Pecera</h1>

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">Información de la Pecera</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 col-md-2">
                Nombre Pecera
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.NombrePecera)
            </dd>

            <dt class="col-sm-3 col-md-2">
                Litros
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.Litros)
            </dd>

            <dt class="col-sm-3 col-md-2">
                Temperatura
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.Temperatura)
            </dd>

            <dt class="col-sm-3 col-md-2">
                PH
            </dt>
            <dd class="col-sm-9 col-md-10">
                @Html.DisplayFor(model => model.Ph)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model?.IdPecera" class="btn btn-warning">
            <i class="fa-solid fa-pen-to-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
</div>
