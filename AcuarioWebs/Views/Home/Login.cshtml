@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<script type="importmap"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/styles.css" />
<script src="~/js/fontawesome.all.js"></script>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form method="post">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <img src="~/lib/icono acuario.png" alt="Logo Acuario" class="mb-4" style="max-width: 120px; height: auto;" />
                                <h2 class="fw-bold mb-2 text-uppercase">Iniciar sesión</h2>
                                <p class="text-white-50 mb-5">Por favor ingresar email y contraseña</p>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input type="email" id="email" name="email" class="form-control form-control-lg" required />
                                    <label class="form-label" for="email">Email</label>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input type="password" id="pass" name="pass" class="form-control form-control-lg" required />
                                    <label class="form-label" for="pass">Contraseña</label>
                                </div>
                                <div>
                                    <span class="badge bg-danger">@ViewBag.Error</span>
                                </div>


                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Ingresar</button>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .gradient-custom {
        /* Imagen de fondo */
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), /* capa oscura encima */
        url('/lib/AcuarioImg.jfif') center/cover no-repeat; /* imagen */
        min-height: 100vh; /* ocupa toda la pantalla */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem; /* evita que el contenido toque los bordes */
    }
</style>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/scripts.js" asp-append-version="true"></script>
<script src="~/js/sweetalert.js"></script>